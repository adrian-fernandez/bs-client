{{#modal-dialog onClose=(action 'close')
                translucentOverlay=true
                targetAttachment="center"}}

  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <form class="form-horizontal" role="form">
          <fieldset>
            <legend>{{t 'booking.title'}}</legend>

            <div class="form-group">
              <label class="col-sm-2 control-label">Rental</label>
              <div class="col-sm-10">
                <input type="text" disabled=true value={{rental.name}}>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">From date</label>
              <div class="col-sm-10">
                {{date-picker value=booking.start_at datesDisabled=busyDays clearBtn=true}}
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">To Date</label>
              <div class="col-sm-10">
                {{date-picker value=booking.end_at datesDisabled=busyDays afterDate=booking.start_at clearBtn=true}}
              </div>
            </div>

            {{#if canShowPrice}}
              <div class="form-group">
                <label class="col-sm-2 control-label">Days</label>
                <div class="col-sm-10">
                  <input type="text" disabled=true value={{calculatedBookingDays}}>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label">Price</label>
                <div class="col-sm-10">
                  <input type="text" disabled=true value={{calculatedBookingPrice}}>
                </div>
              </div>
            {{/if}}

            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <button type="button" class="btn btn-danger" {{action 'close'}}>{{t 'general.cancel'}}</button>
                <button type="button" class="btn btn-success" disabled={{not canConfirmBooking}} {{action 'save'}}>{{t 'general.confirm'}}</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
{{/modal-dialog}}
